<UserControl x:Class="BeatSaberSongManager.UserControls.BeatmapOnlineUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BeatSaberSongManager.UserControls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Label Content="Beatmap Online"
               FontSize="40"
               Grid.ColumnSpan="2"
               Margin="0,0,0,20" />

        <StackPanel Grid.Row="1"
                    Margin="0,0,20,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
            <RadioButton x:Name="radioButtonSearch"
                         Width="30"
                         Height="30"
                         Margin="0,0,2.5,0"
                         Style="{DynamicResource MahApps.Styles.ToggleButton.Circle}">
                <iconPacks:PackIconFontAwesome Kind="SearchSolid"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center" />
            </RadioButton>

            <RadioButton x:Name="radioButtonHot"
                         Width="30"
                         Height="30"
                         Margin="2.5,0,2.5,0"
                         Style="{DynamicResource MahApps.Styles.ToggleButton.Circle}"
                         Checked="RadioButtonHot_Checked">
                <iconPacks:PackIconFontAwesome Kind="FireSolid"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center" />
            </RadioButton>

            <RadioButton x:Name="radioButtonRating"
                         Width="30"
                         Height="30"
                         Margin="2.5,0,2.5,0"
                         Style="{DynamicResource MahApps.Styles.ToggleButton.Circle}">
                <iconPacks:PackIconFontAwesome Kind="StarSolid"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center" />
            </RadioButton>

            <RadioButton x:Name="radioButtonLatest"
                         Width="30"
                         Height="30"
                         Margin="2.5,0,2.5,0"
                         Style="{DynamicResource MahApps.Styles.ToggleButton.Circle}">
                <iconPacks:PackIconFontAwesome Kind="ExclamationSolid"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center" />
            </RadioButton>

            <RadioButton x:Name="radioButtonDownloads"
                         Width="30"
                         Height="30"
                         Margin="2.5,0,2.5,0"
                         Style="{DynamicResource MahApps.Styles.ToggleButton.Circle}">
                <iconPacks:PackIconFontAwesome Kind="DownloadSolid"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center" />
            </RadioButton>

            <RadioButton x:Name="radioButtonPlays"
                         Width="30"
                         Height="30"
                         Margin="2.5,0,0,0"
                         Style="{DynamicResource MahApps.Styles.ToggleButton.Circle}">
                <iconPacks:PackIconFontAwesome Kind="PlaySolid"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center" />
            </RadioButton>
        </StackPanel>

        <Grid Grid.Column="1"
              Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <TextBox x:Name="textBoxSearch"
                     mah:TextBoxHelper.Watermark="Search by name, description or uploader"
                     mah:TextBoxHelper.UseFloatingWatermark="True"
                     Height="40"
                     VerticalContentAlignment="Center"
                     mah:TextBoxHelper.ClearTextButton="True" />
            <Button x:Name="buttonSearch"
                    Grid.Column="1"
                    Width="40">
                <iconPacks:PackIconFontAwesome Kind="SearchSolid"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center" />
            </Button>
        </Grid>

        <DataGrid x:Name="dataGridMaps"
                  ItemsSource="{Binding Path=BeatSaverMaps.docs}"
                  Grid.Row="2"
                  Grid.ColumnSpan="2"
                  Margin="0,10,0,0"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  CanUserSortColumns="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="False"
                  CanUserResizeRows="False"
                  CanUserResizeColumns="False"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Cover">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid>
                                <Border Width="30"
                                        Height="30"
                                        CornerRadius="100">
                                    <Border.Background>
                                        <ImageBrush ImageSource="{Binding Path=realCoverURL, Mode=OneWay}" />

                                        <!--<Image Source="{Binding Path=realCoverURL, Mode=OneWay}"
                                           Width="30"
                                           Height="30" />-->

                                    </Border.Background>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Song name"
                                    Width="1*"
                                    Binding="{Binding Path=name}" />
                <DataGridTextColumn Header="Mapper"
                                    Binding="{Binding Path=uploader.username}" />
                <!--<DataGridTextColumn Header="Difficulties"
                                    Binding="{Binding Path=}" />-->
                <DataGridTextColumn Header="Downloads"
                                    Binding="{Binding Path=stats.downloads}" />
                <DataGridTemplateColumn Header="Actions">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>

                                <Button Tag="{Binding Path=_id}"
                                        Click="Map_Download">
                                    <iconPacks:PackIconFontAwesome Kind="DownloadSolid"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center" />
                                </Button>
                                <Button Tag="{Binding Path=_id}"
                                        Grid.Column="1"
                                        Click="Map_Details">
                                    <iconPacks:PackIconFontAwesome Kind="ArrowRightSolid"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center" />
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Rectangle x:Name="rectangleLoading"
                   Grid.Row="2"
                   Grid.ColumnSpan="2"
                   Margin="0,10,0,0">
            <Rectangle.Fill>
                <SolidColorBrush Color="Black"
                                 Opacity=".5" />
            </Rectangle.Fill>
        </Rectangle>
        <mah:ProgressRing x:Name="progressRingLoading"
                          Foreground="{DynamicResource MahApps.Brushes.AccentBase}"
                          IsActive="True"
                          Grid.Row="2"
                          Grid.ColumnSpan="2"
                          Margin="0,10,0,0" />
    </Grid>
</UserControl>
