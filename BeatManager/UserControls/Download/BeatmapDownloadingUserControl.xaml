<UserControl x:Class="BeatManager.UserControls.Download.BeatmapDownloadingUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:st="http://schemas.spicytaco.io/"
             mc:Ignorable="d"
             d:DesignHeight="100"
             d:DesignWidth="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Border Width="40"
                Height="40"
                CornerRadius="100"
                Margin="0,0,15,0">
            <Border.Background>
                <ImageBrush ImageSource="{Binding Path=Beatmap.RealCoverURL, Mode=OneWay}" />
            </Border.Background>
        </Border>

        <st:StackPanel MarginBetweenChildren="5"
                       Grid.Column="1"
                       VerticalAlignment="Center">
            <TextBlock TextWrapping="Wrap"
                       FontSize="12"
                       FontWeight="Bold">
                <Run Text="{Binding Path=Beatmap.Metadata.SongName}" />
                <Run Text="{Binding Path=Beatmap.Metadata.SongSubName}">
                    <Run.Foreground>
                        <SolidColorBrush Color="{DynamicResource MahApps.Colors.ThemeForeground}"
                                         Opacity=".5" />
                    </Run.Foreground>
                </Run>
            </TextBlock>

            <TextBlock Text="{Binding Path=DownloadTimeLeft}"
                       FontSize="12" />
            <TextBlock Text="{Binding Path=DownloadTimeSpent}"
                       FontSize="12" />

            <ProgressBar Value="{Binding Path=ProgressPercent}" />
        </st:StackPanel>
    </Grid>
</UserControl>
