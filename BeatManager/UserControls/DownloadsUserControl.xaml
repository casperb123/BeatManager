<UserControl x:Class="BeatManager.UserControls.DownloadsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:st="http://schemas.spicytaco.io/"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <st:StackPanel Margin="30,0">
        <Label Content="Downloads"
               FontSize="45"
               Margin="0,0,0,30" />

        <Expander Header="{Binding Path=DownloadingCount, StringFormat={}Downloading - {0}}"
                  IsExpanded="True">
            <ItemsControl ItemsSource="{Binding Path=Downloading}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </Expander>
        <Expander Header="{Binding Path=CompletedCount, StringFormat={}Completed - {0}}"
                  IsExpanded="True">
            <ItemsControl ItemsSource="{Binding Path=Completed}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </Expander>
    </st:StackPanel>
</UserControl>
