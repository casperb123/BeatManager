<UserControl x:Class="BeatManager.UserControls.DownloadsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:st="http://schemas.spicytaco.io/"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <st:StackPanel Margin="30,0">
        <Label Content="Downloads"
               FontSize="45"
               Margin="0,0,0,30" />

        <Expander IsExpanded="True">
            <Expander.Header>
                <Binding Path="DownloadingCount"
                         StringFormat="{}Downloading - {0}" />
            </Expander.Header>

            <st:StackPanel x:Name="stackPanelDownloading"
                           MarginBetweenChildren="5" />
        </Expander>
        <Expander IsExpanded="True">
            <Expander.Header>
                <Binding Path="CompletedCount"
                         StringFormat="{}Completed - {0}" />
            </Expander.Header>

            <st:StackPanel x:Name="stackPanelCompleted"
                           MarginBetweenChildren="5" />
        </Expander>
    </st:StackPanel>
</UserControl>
